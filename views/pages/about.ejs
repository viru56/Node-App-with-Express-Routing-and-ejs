<%- contentFor('hero') %>
    <section class="hero">
        <div class="hero-content">
            <h2> All about us.</h2>
            <p>We are showing all the user message here.</p>
            <a href="/contact" class="btn btn-lg btn-primary">Drop us a line</a>
        </div>
    </section>

    <%- contentFor('body') %>
    <div class="about-header text-center">
     <h1> User Message </h1>
    </div>
        <div class="jumbotron text-center userMessage">
            <div class="row">
                <% for (user of users) { %>
                    <div class="col-sm-3 comments">
                        <h3>
                            <%= user.name %> -  <%= user.email %>
                        </h3>
                         <p>
                        <%= user.message %>
                        </p>
                    </div>
                <% } %>
            </div>
        </div>